#include <iostream>
#include <string>
using namespace std;

int main() {
	// strings and variables decleration
    string str1,str2;
    int count1,count2;
    //taking input for strings
        getline(cin,str1);
        getline(cin,str2);
    //calculating length of strings    
    int len1=str1.size();
    int len2=str2.size();
    //displaying output
        cout<<len1<<" "<<len2<<"\n";
        cout<<str1+str2<<"\n";
        //using swap function
        swap(str1[0], str2[0]);
        cout << str1 << " " << str2 << std::endl;

    return 0;
}
